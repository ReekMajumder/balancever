<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="370dp" android:background="@drawable/homepage_background">

    <TextView
        android:id="@+id/loggedIntroTextView"
        android:layout_width="343dp"
        android:layout_height="180dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text="@string/logged_in_intro"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/structureDayBtn"
        android:layout_width="273dp"
        android:layout_height="62dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corners"
        android:padding="15dp"
        android:text="STRUCTURE YOUR DAY"
        android:textSize="20dp"
        android:textStyle="bold"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="@+id/loggedIntroTextView"
        app:layout_constraintStart_toStartOf="@+id/loggedIntroTextView"
        app:layout_constraintTop_toBottomOf="@+id/loggedIntroTextView" />

    <Button
        android:id="@+id/ideasActivitiesButton"
        android:layout_width="273dp"
        android:layout_height="62dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corners"
        android:padding="15dp"
        android:text="@string/ideas_activities"
        android:textSize="20dp"
        android:textStyle="bold"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="@+id/loggedIntroTextView"
        app:layout_constraintStart_toStartOf="@+id/loggedIntroTextView"
        app:layout_constraintTop_toBottomOf="@+id/structureDayBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>