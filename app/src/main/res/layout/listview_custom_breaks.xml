<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content" android:background="@android:color/transparent">

    <TextView
        android:id="@+id/breakCustomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="BLOCKER"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.509" />

    <TextView
        android:id="@+id/startCustomTextView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:text="Start"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/breakCustomTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/startBreakEditText"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/edit_text_outline"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:hint="00:00"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/startCustomTextView"
        app:layout_constraintHorizontal_bias="0.443"
        app:layout_constraintStart_toStartOf="@+id/startCustomTextView"
        app:layout_constraintTop_toBottomOf="@+id/startCustomTextView" />

    <EditText
        android:id="@+id/toBreakEditText"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/edit_text_outline"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:hint="00:00"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/toCustomTextView"
        app:layout_constraintStart_toStartOf="@+id/toCustomTextView"
        app:layout_constraintTop_toBottomOf="@+id/toCustomTextView" />

    <TextView
        android:id="@+id/toCustomTextView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="4dp"
        android:text="To"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/startCustomTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addBreakButton"
        android:layout_width="58dp"
        android:layout_height="52dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/ic_add_button"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/toBreakEditText"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>