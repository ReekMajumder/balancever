<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="logged_nav_drawer_menu_item">
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/navy</item>
        <item name="android:textStyle">bold</item>
        <item name="android:height">48dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="background">?android:attr/selectableItemBackground</item>
        <item name="paddingStart">30dp</item>
    </style>

    <style name="date_selected_style">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">serif</item>
        <item name="android:textColor">#2A363B</item>
    </style>

</resources>
